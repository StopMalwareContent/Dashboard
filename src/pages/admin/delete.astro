---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Delete site">
  <h1>Delete site</h1>
  <div>
    <div class="mb-3">
      <label for="domainFormControl" class="form-label">Domain</label>
      <input
        type="text"
        name="domain"
        class="form-control"
        id="domainFormControl"
      />
    </div>
    <button type="submit" class="btn btn-danger" id="submitFormControl"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-trash-2"
        ><path d="M3 6h18"></path><path
          d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path
          d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line
          x1="10"
          x2="10"
          y1="11"
          y2="17"></line><line x1="14" x2="14" y1="11" y2="17"></line></svg
      > Delete</button
    >
  </div>
</Layout>

<script>
  // Redirect to login page if user is not logged in
  // @ts-ignore
  if (!Cookies.get("access_token")) {
    alert("Not authorized.")
    window.location.href = "/auth"
  }
  // End

  import { API_URL } from "astro:env/client"

  const submitButton = document.getElementById("submitFormControl")
  const domain = document.getElementById(
    "domainFormControl",
  ) as HTMLInputElement

  // @ts-ignore
  const access_token = Cookies.get("access_token")

  submitButton?.addEventListener("click", async () => {
    if (domain?.value == "") {
      // @ts-ignore
      appendAlert("Fill out domain field.", "danger")
      return
    }

    const response = await fetch(`${API_URL}/sites/${domain.value}`, {
      method: "DELETE",
      headers: {
        Authorization: `Bearer ${access_token}`,
        "Content-type": "application/json",
      },
    })

    if (!response.ok) {
      // @ts-ignore
      appendAlert(
        "Oops! Check if you are logged in, only admins can add/edit/delete sites.",
        "danger",
      )
    } else {
      // @ts-ignore
      appendAlert(`Success! Deleted ${domain.value}'s entry.`, "success")
    }
  })
</script>
